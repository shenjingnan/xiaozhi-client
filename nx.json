{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/**/*.test.ts",
      "!{projectRoot}/**/*.spec.ts"
    ],
    "sharedGlobals": ["{workspaceRoot}/apps/backend/vitest.config.ts"]
  },
  "tui": {
    "enabled": false
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": false
    },
    "test": {
      "inputs": ["default", "^production", "sharedGlobals"],
      "cache": false
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/biome.json"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^production"],
      "cache": false
    },
    "nx-release-publish": {
      "dependsOn": ["^nx-release-publish", "build"],
      "inputs": ["default", "^production"],
      "cache": false
    }
  },
  "release": {
    "projects": ["cli", "config", "shared-types", "mcp-core", "endpoint", "version", "asr", "tts", "calculator-mcp", "datetime-mcp", "xiaozhi-client"],
    "projectsRelationship": "fixed",
    "git": {
      "commit": true,
      "tag": true
    },
    "version": {
      "conventionalCommits": true
    },
    "changelog": {
      "workspaceChangelog": {
        "file": "CHANGELOG.md"
      },
      "projectChangelogs": false
    },
    "github": true,
    "githubRelease": true
  },
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview"
      }
    }
  ],
  "defaultBase": "main"
}
