{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts"
  ],
  "references": [
    { "path": "../../packages/config" },
    { "path": "../../packages/endpoint" },
    { "path": "../../packages/mcp-core" },
    { "path": "../../packages/version" }
  ]
}
