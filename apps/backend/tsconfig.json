{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "noImplicitAny": false,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./*"],
      "@xiaozhi-client/shared-types": ["../../packages/shared-types/src"]
    }
  },
  "references": [
    { "path": "../../packages/shared-types" }
  ],
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts"
  ]
}
