{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/backend",
    "rootDir": ".",
    "paths": {
      "@xiaozhi-client/version": ["../../dist/version"],
      "@xiaozhi-client/version/*": ["../../dist/version/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts",
    "vitest.d.ts",
    "**/*.test.ts"
  ]
}
