{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      // 包引用（从根配置继承）
      "@xiaozhi-client/version": ["../../dist/version"],
      "@xiaozhi-client/version/*": ["../../dist/version/*"],

      // backend 内部别名
      "@handlers/*": ["./handlers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@services/*": ["./services/*"],
      "@errors/*": ["./errors/*"],
      "@utils/*": ["./utils/*"],
      "@core/*": ["./core/*"],
      "@transports/*": ["./lib/mcp/transports/*"],
      "@adapters/*": ["./adapters/*"],
      "@managers/*": ["./managers/*"],
      "@types/*": ["./types/*"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./lib/*"],
      "@root/*": ["./*"],
      "@routes/*": ["./routes/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts",
    "vitest.d.ts",
    "**/*.test.ts"
  ]
}
