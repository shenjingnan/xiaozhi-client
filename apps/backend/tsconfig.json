{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/backend",
    "rootDir": ".",
    "baseUrl": ".",
    "noImplicitAny": false,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["./*"],
      "@errors/*": ["./errors/*"],
      "@types/*": ["./types/*"],
      "@root/*": ["./*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts"
  ]
}
