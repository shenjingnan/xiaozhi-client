{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend build"
      },
      "outputs": ["{workspaceRoot}/dist/backend"],
      "dependsOn": ["shared-types:build", "config:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend test"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend test:watch"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend test:coverage"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend lint"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend lint:fix"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend format"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend check:type"
      },
      "dependsOn": ["config:build", "endpoint:build", "version:build"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @xiaozhi/backend dev"
      }
    }
  },
  "tags": ["type:app", "platform:node"],
  "implicitDependencies": ["shared-types"]
}
