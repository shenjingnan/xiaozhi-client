{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env NODE_ENV=${NODE_ENV:-production} tsup --config apps/backend/tsup.config.ts",
        "env": {
          "PWD": "{workspaceRoot}"
        }
      },
      "outputs": ["{workspaceRoot}/dist/backend"],
      "dependsOn": ["shared-types:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config config/vitest.config.ts --coverage.enabled=false"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config config/vitest.config.ts"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config config/vitest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --config-path=biome.json apps/backend"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write --config-path=biome.json apps/backend"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write --config-path=biome.json apps/backend"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project tsconfig.typecheck.json",
        "cwd": "apps/backend"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cross-env NODE_ENV=development tsup --config apps/backend/tsup.config.ts --watch",
        "env": {
          "PWD": "{workspaceRoot}"
        }
      }
    }
  },
  "tags": ["type:app", "platform:node"],
  "implicitDependencies": ["shared-types"]
}
