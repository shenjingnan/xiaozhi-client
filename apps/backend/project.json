{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --config ../../config/tsup.config.ts"
      },
      "outputs": ["{workspaceRoot}/dist"],
      "dependsOn": ["shared-types:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config config/vitest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config config/vitest.config.ts"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config config/vitest.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --config-path=config/biome.json apps/backend"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write --config-path=config/biome.json apps/backend"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write --config-path=config/biome.json apps/backend"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project ../../config/tsconfig.typecheck.json"
      }
    }
  },
  "tags": ["type:app", "platform:node"],
  "implicitDependencies": ["shared-types"]
}
