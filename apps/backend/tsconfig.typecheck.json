{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": "../../",
    "paths": {
      "@xiaozhi-client/config": ["packages/config/dist"],
      "@xiaozhi-client/config/*": ["packages/config/dist/*"],
      "@xiaozhi-client/shared-types": ["packages/shared-types/dist"],
      "@xiaozhi-client/endpoint": ["dist/endpoint"],
      "@xiaozhi-client/endpoint/*": ["dist/endpoint/*"],
      "@handlers/*": ["apps/backend/handlers/*"],
      "@middlewares/*": ["apps/backend/middlewares/*"],
      "@services/*": ["apps/backend/services/*"],
      "@errors/*": ["apps/backend/errors/*"],
      "@utils/*": ["apps/backend/utils/*"],
      "@core/*": ["apps/backend/core/*"],
      "@transports/*": ["apps/backend/lib/mcp/transports/*"],
      "@adapters/*": ["apps/backend/adapters/*"],
      "@managers/*": ["apps/backend/managers/*"],
      "@types/*": ["apps/backend/types/*"],
      "@/lib/*": ["apps/backend/lib/*"],
      "@root/*": ["apps/backend/*"],
      "@routes/*": ["apps/backend/routes/*"],
      "@constants/*": ["apps/backend/constants/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "templates/**/*",
    "**/*.config.ts",
    "vitest.d.ts"
  ]
}
