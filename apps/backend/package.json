{
  "name": "@xiaozhi/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=${NODE_ENV:-production} tsup --config tsup.config.ts",
    "test": "vitest run --coverage.enabled=false",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check:type": "tsc --noEmit",
    "dev": "cross-env NODE_ENV=development tsup --config tsup.config.ts --watch"
  },
  "dependencies": {
    "@coze/api": "^1.3.9",
    "@hono/node-server": "^1.17.1",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@xiaozhi-client/config": "workspace:*",
    "@xiaozhi-client/endpoint": "workspace:*",
    "@xiaozhi-client/mcp-core": "workspace:*",
    "@xiaozhi-client/version": "workspace:*",
    "ajv": "^8.17.1",
    "chalk": "^5.6.0",
    "comment-json": "^4.2.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "hono": "^4.10.3",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.3.1",
    "node-cache": "^5.1.2",
    "pino": "^8.0.0",
    "pino-pretty": "^13.1.1",
    "ws": "^8.14.2",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/ws": "^8.18.1",
    "happy-dom": "^20.0.2",
    "supertest": "^7.1.4"
  }
}
