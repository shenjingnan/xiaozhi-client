{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "root": false,
  "extends": ["../../biome.json"],
  "files": {
    "ignoreUnknown": false
  },
  "linter": {
    "rules": {
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "useImportType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
