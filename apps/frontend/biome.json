{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["../../config/biome.json"],
  "files": {
    "include": ["src/**/*.ts", "src/**/*.tsx", "*.ts", "*.js"],
    "ignore": ["node_modules/**", "dist/**", "coverage/**"]
  },
  "linter": {
    "rules": {
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "useImportType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
