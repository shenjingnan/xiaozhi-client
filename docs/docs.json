{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Xiaozhi Client",
  "description": "用于聚合MCP Server的命令行工具",
  "colors": {
    "primary": "#3B82F6",
    "light": "#F8FAFC",
    "dark": "#0F172A"
  },
  "navigation": {
    "pages": [
      "getting-started/intro",
      "getting-started/quickstart",
      "usage/docker",
      "usage/modelscope",
      "usage/coze-workflow",
      "usage/use-multi-xiaozhi-mcp-endpoints",
      "usage/as-a-mcp-server",
      "reference/command",
      "development/docker-build",
      {
        "group": "开发",
        "pages": ["changelog"]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "icon": "github",
        "label": "GitHub",
        "href": "https://github.com/shenjingnan/xiaozhi-client"
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/shenjingnan/xiaozhi-client"
    }
  },
  "integrations": {
    "telemetry": {
      "enabled": true
    }
  },
  "contextual": {
    "options": ["copy", "view"]
  },
  "errors": {
    "404": {
      "redirect": true
    }
  }
}
