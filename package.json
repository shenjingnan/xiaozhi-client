{
  "name": "xiaozhi-client",
  "version": "1.9.4-beta.2",
  "description": "小智 AI 客户端 命令行工具",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/xiaozhi-client.git"
  },
  "author": "shenjingnan <sjn.code@gmail.com>",
  "license": "MIT",
  "keywords": [
    "xiaozhi",
    "mcp",
    "websocket",
    "ai"
  ],
  "type": "module",
  "main": "dist/backend/cli.js",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "xiaozhi": "dist/cli/index.js",
    "xiaozhi-client": "dist/cli/index.js"
  },
  "scripts": {
    "build": "pnpm run build:packages && pnpm run build:web && cross-env NODE_ENV=${NODE_ENV:-production} tsup --config config/tsup.config.ts",
    "build:packages": "pnpm --filter './packages/*' run build",
    "build:web": "cd apps/frontend && pnpm install && pnpm run build",
    "dev": "pnpm run build:packages && cross-env NODE_ENV=development tsup --config config/tsup.config.ts --watch",
    "test": "vitest run --config config/vitest.config.ts",
    "test:silent": "vitest run --silent=true --config config/vitest.config.ts",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:ui": "vitest --ui --config config/vitest.config.ts",
    "format": "biome format --write --config-path=config/biome.json .",
    "lint": "biome lint --write --config-path=config/biome.json .",
    "type:check": "tsc --project config/tsconfig.typecheck.json",
    "check": "biome check --config-path=config/biome.json .",
    "check:fix": "biome check --write --unsafe --config-path=config/biome.json .",
    "check:all": "pnpm check && pnpm type:check && pnpm spell:check && pnpm duplicate:check",
    "spell:check": "cspell --config config/cspell.json .",
    "duplicate:check": "jscpd apps/backend/",
    "docker:update-version": "node docker/scripts/update-version.js",
    "example": "node --loader ts-node/esm",
    "docs:dev": "cd docs && pnpm dev",
    "release": "npx release-it --config config/release-it.json",
    "release:dry": "npx release-it --config config/release-it.json --dry-run",
    "nx:lint": "nx run-many -t lint",
    "nx:type-check": "nx run-many -t type-check",
    "nx:test": "nx run-many -t test",
    "nx:test:coverage": "nx run-many -t test:coverage --parallel=true",
    "nx:build": "nx run-many -t build --parallel=false",
    "nx:projects": "nx show projects",
    "nx:graph": "nx graph",
    "nx:affected": "nx print-affected",
    "nx:backend": "nx run backend:build",
    "nx:frontend": "nx run frontend:build",
    "nx:docs": "nx run docs:build"
  },
  "dependencies": {
    "@coze/api": "^1.3.9",
    "@hono/node-server": "^1.17.1",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@types/express": "^5.0.3",
    "ajv": "^8.17.1",
    "chalk": "^5.6.0",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "comment-json": "^4.2.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "hono": "^4.10.3",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.3.1",
    "node-cache": "^5.1.2",
    "node-fetch": "2",
    "ora": "^8.2.0",
    "pino": "^8.0.0",
    "pino-pretty": "^13.1.1",
    "ws": "^8.14.2",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@codecov/vite-plugin": "^1.9.1",
    "@nx/vite": "^22.3.3",
    "@nx/vitest": "^22.3.3",
    "@nx/workspace": "^22.3.3",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.3.0",
    "@types/node-fetch": "^2.6.12",
    "@types/semver": "^7.7.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.1",
    "esbuild": "^0.25.9",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "happy-dom": "^20.0.2",
    "jscpd": "^4.0.5",
    "nx": "^22.3.3",
    "release-it": "^19.0.4",
    "semver": "^7.7.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "form-data": "^4.0.4",
      "braces": ">=3.0.3",
      "micromatch": ">=4.0.8",
      "axios": ">=1.12.0",
      "@conventional-changelog/git-client": ">=2.0.0",
      "vite@>=7.1.0 <=7.1.10": ">=7.1.11",
      "hono@>=1.1.0 <4.10.3": ">=4.10.3",
      "js-yaml@<4.1.1": ">=4.1.1",
      "esbuild@<=0.24.2": ">=0.25.0",
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "glob@>=11.0.0 <11.1.0": ">=11.1.0",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1",
      "mdast-util-to-hast@>=13.0.0 <13.2.1": ">=13.2.1"
    }
  },
  "packageManager": "pnpm@10.13.1"
}
