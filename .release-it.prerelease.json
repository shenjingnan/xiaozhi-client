{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["pnpm audit --audit-level moderate"],
    "after:bump": "npm publish --access public --tag beta",
    "after:release": "echo \"🎉 Prerelease v${version} published to npm successfully!\""
  }
}
