{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true,
    "versionArgs": ["--no-git-tag-version"]
  },
  "hooks": {
    "before:init": ["pnpm audit --audit-level moderate"],
    "after:bump": ["pnpm run build"],
    "after:release": "echo \"🎉 预发布版本 v${version} 发布完成！\""
  }
}
