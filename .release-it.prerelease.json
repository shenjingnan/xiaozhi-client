{
  "git": {
    "commit": false,
    "tag": false,
    "push": false,
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true,
    "timeout": 900000,
    "skipChecks": true,
    "publishArgs": ["--access", "public", "--tag", "beta"]
  },
  "hooks": {
    "before:init": ["pnpm audit --audit-level moderate"],
    "after:release": "echo \"ðŸŽ‰ Prerelease v${version} published to npm successfully!\""
  }
}
