{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./apps/backend",
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["apps/backend/cli/*"],
      "@cli/commands/*": ["apps/backend/cli/commands/*"],
      "@cli/services/*": ["apps/backend/cli/services/*"],
      "@cli/utils/*": ["apps/backend/cli/utils/*"],
      "@cli/errors/*": ["apps/backend/cli/errors/*"],
      "@cli/interfaces/*": ["apps/backend/cli/interfaces/*"],
      "@handlers/*": ["apps/backend/handlers/*"],
      "@middlewares/*": ["apps/backend/middlewares/*"],
      "@services/*": ["apps/backend/services/*"],
      "@errors/*": ["apps/backend/errors/*"],
      "@utils/*": ["apps/backend/utils/*"],
      "@core/*": ["apps/backend/core/*"],
      "@transports/*": ["apps/backend/transports/*"],
      "@adapters/*": ["apps/backend/adapters/*"],
      "@managers/*": ["apps/backend/managers/*"],
      "@types/*": ["apps/backend/types/*"],
      "@/lib/*": ["apps/backend/lib/*"],
      "@root/*": ["apps/backend/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["apps/backend/**/*"],
  "exclude": ["node_modules", "dist", "scripts/**/*", "templates/**/*"]
}
