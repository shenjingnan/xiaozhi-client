{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./apps/backend",
    "baseUrl": ".",
    "paths": {
      "@xiaozhi-client/config": ["packages/config/dist"],
      "@xiaozhi-client/config/*": ["packages/config/dist/*"],
      "@xiaozhi-client/endpoint": ["packages/endpoint/dist"],
      "@xiaozhi-client/endpoint/*": ["packages/endpoint/dist/*"],
      "@xiaozhi-client/mcp-core": ["packages/mcp-core/dist"],
      "@xiaozhi-client/mcp-core/*": ["packages/mcp-core/dist/*"],
      "@xiaozhi-client/shared-types": ["packages/shared-types/dist"],
      "@xiaozhi-client/shared-types/*": ["packages/shared-types/dist/*"],
      "@handlers/*": ["apps/backend/handlers/*"],
      "@middlewares/*": ["apps/backend/middlewares/*"],
      "@services/*": ["apps/backend/services/*"],
      "@errors/*": ["apps/backend/errors/*"],
      "@utils/*": ["apps/backend/utils/*"],
      "@core/*": ["apps/backend/core/*"],
      "@transports/*": ["apps/backend/lib/mcp/transports/*"],
      "@adapters/*": ["apps/backend/adapters/*"],
      "@managers/*": ["apps/backend/managers/*"],
      "@types/*": ["apps/backend/types/*"],
      "@/types/*": ["apps/backend/types/*"],
      "@/lib/*": ["apps/backend/lib/*"],
      "@root/*": ["apps/backend/*"],
      "@routes/*": ["apps/backend/routes/*"],
      "@constants/*": ["apps/backend/constants/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["apps/backend/**/*", "packages/**/*", "mcps/**/*"],
  "exclude": ["node_modules", "dist", "scripts/**/*", "templates/**/*"],
  "references": [
    { "path": "./apps/backend" },
    { "path": "./packages/config" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/cli" },
    { "path": "./packages/endpoint" },
    { "path": "./mcps/calculator-mcp" },
    { "path": "./mcps/datetime-mcp" }
  ]
}
