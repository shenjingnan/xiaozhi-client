{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  labels: [
    'dependencies',
  ],
  assignees: [
    'shenjingnan',
  ],
  timezone: 'Asia/Shanghai',
  schedule: [
    'before 9am every weekday',
  ],
  rangeStrategy: 'bump',
  "minimumConfidence": "high",
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'before 9am every weekday',
    ],
  },
  includePaths: [
    'package.json',
    'web/package.json',
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'patch',
        'minor',
      ],
      automerge: true,
      automergeType: 'pr',
      minimumConfidence: 'high'
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      dependencyDashboardApproval: true,
      minimumConfidence: 'high'
    },
    {
      matchManagers: [
        'npm',
      ],
      automerge: true,
      automergeType: 'pr',
      matchPackageNames: [
        '/^@types//',
      ],
      minimumConfidence: 'high'
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      matchUpdateTypes: [
        'major',
      ],
      dependencyDashboardApproval: false,
      automerge: false,
      minimumConfidence: 'high'
    },
  ],
}
