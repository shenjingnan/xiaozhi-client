{
  "name": "@xiaozhi-client/endpoint",
  "version": "2.0.0-beta.3",
  "description": "小智接入点 WebSocket 连接管理库",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/shenjingnan/xiaozhi-client.git",
    "directory": "packages/endpoint"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "start": "tsx examples/single-endpoint.ts",
    "start:agg": "tsx examples/mcp-aggregation.ts",
    "start:iso": "tsx examples/endpoint-isolation.ts",
    "start:manage": "tsx examples/manage-endpoints.ts",
    "start:shared": "tsx examples/shared-mcp-to-multi-endpoints.ts"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "@xiaozhi-client/mcp-core": "workspace:*",
    "@xiaozhi-client/config": "workspace:*"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/ws": "^8.5.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "xiaozhi",
    "endpoint",
    "websocket",
    "mcp",
    "connection-manager"
  ],
  "author": "xiaozhi-client",
  "license": "MIT"
}
