{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup",
        "cwd": "packages/cli"
      },
      "outputs": ["{workspaceRoot}/dist/cli"],
      "dependsOn": ["backend:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config ../../config/vitest.cli.config.ts --coverage.enabled=false"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config ../../config/vitest.cli.config.ts"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config ../../config/vitest.cli.config.ts"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --config-path=../../config/biome.json packages/cli"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check --write --config-path=../../config/biome.json packages/cli"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'CLI type-check skipped: bundled by tsup which strips types'"
      }
    }
  },
  "tags": ["type:lib", "scope:cli"],
  "implicitDependencies": ["backend", "shared-types"]
}
