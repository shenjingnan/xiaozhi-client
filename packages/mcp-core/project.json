{
  "name": "mcp-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mcp-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup",
        "cwd": "packages/mcp-core"
      },
      "outputs": ["{workspaceRoot}/packages/mcp-core/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage.enabled=false",
        "cwd": "packages/mcp-core"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "packages/mcp-core"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "packages/mcp-core"
      },
      "outputs": ["{workspaceRoot}/coverage"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/mcp-core"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch",
        "cwd": "packages/mcp-core"
      }
    },
    "nx-release-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "../../scripts/publish-with-tag.sh",
        "cwd": "packages/mcp-core"
      }
    }
  },
  "tags": ["type:lib", "scope:mcp"]
}
